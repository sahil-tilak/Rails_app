
<h1> Rides</h1>
<p><%= @count %></p>
<table border = "2">
	<tr>
		<th> Cab ID </th>
		<th> Date </th>
		<th> Location </th>
		<th> Time </th>
		<th> Driver ID </th>
		<th> Driver name </th>
		<th> Request count </th>
		<th> View requests </th>

	</tr>

	<% for d in @ride%>

	<tr>
	<td><%=d.cab_id%></td>
	<td><%=d.date%></td>
	<td><%=d.location%></td>
	<td><%=d.time%></td>
	<td><%=d.driver_id%></td>
	<td><%=d.driver.first_name + "" + d.driver.last_name%></td>
	<td><%=d.ride_requests.count%></td>
	<td><%= link_to 'View Requests', ride_ride_requests_url(d)%></td>
    </tr> 

    <%end%>